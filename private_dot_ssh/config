Host *
	IdentityFile ~/.ssh/id_ssh
	IdentityFile ~/.ssh/id_ssh.pub
  SetEnv TERM=xterm-256color

Host pi
  Hostname 192.168.1.163
  User vera

Host BarkStation
  Hostname 192.168.1.181
  User vera
  Port 22
  UserKnownHostsFile ~/.ssh/known_hosts

Host MeowStation
  Hostname 192.168.1.167
  User vera
  Port 22
  UserKnownHostsFile ~/.ssh/known_hosts

Host remarkable
  Hostname 10.11.99.1
  User root
  Port 22
  StrictHostKeyChecking no
  UserKnownHostsFile /dev/null
  IdentityFile ~/.ssh/id_rsa_remarkable
  IdentityFile ~/.ssh/id_rsa_remarkable.pub
