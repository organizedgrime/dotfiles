# Set up PATH
add_to_path() {
	if ! [[ "$PATH" =~ "$1" ]]; then
		export PATH="$1:$PATH"
	fi
}
add_to_path "/usr/bin/"
add_to_path "/usr/local/bin/"
add_to_path "$HOME/.local/bin/"
add_to_path "$HOME/bin/"
add_to_path "$HOME/go/bin/"
add_to_path "$HOME/.cargo/bin/"
# Mac
add_to_path "/opt/homebrew/bin/"

# NVM
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"                   # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion" # This loads nvm bash_completion

# TTY
export GPG_TTY=$(tty)

# SSH
# TODO make this not shit
name=$(cat /etc/hostname)
if [[ `uname` == Linux ]] then
    /usr/bin/keychain --quiet $HOME/.ssh/id_ed25519
	source $HOME/.keychain/$name-sh
fi

# ZSH
export ZSH="$HOME/.oh-my-zsh"
export ZSH_THEME="robbyrussell"

# Catppucchin mocha zsh highlighting
source ~/.zsh/catppuccin_mocha-zsh-syntax-highlighting.zsh
# Load plugins
plugins=(
  git
  nvm
  fzf
  zsh-syntax-highlighting
  thefuck
  zoxide
)
source $ZSH/oh-my-zsh.sh
# opam configuration
[[ ! -r "$HOME/.opam/opam-init/init.zsh" ]] || source "$HOME/.opam/opam-init/init.zsh" > /dev/null 2> /dev/null
# Use fd instead of fzf
export FZF_DEFAULT_COMMAND="fd --hidden --strip-cwd-prefix --exclude .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fd --type=d --hidden --strip-cwd-prefix --exclude .git"
# Preview specific stuff
show_file_or_dir_preview="if [ -d {} ]; then eza --tree --color=always {} | head -200; else bat -n --color=always --line-range :500 {}; fi"
export FZF_CTRL_T_OPTS="--preview '$show_file_or_dir_preview'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

_fzf_compgen_path() {
  fd --hidden --exclude .git . "$1"
}
_fzf_compgen_dir() {
  fd --type=d --hidden --exclude .git . "$1"
}
_fzf_comprun() {
  local command=$1
  shift

  case "$command" in
    cd)           fzf --preview 'eza --tree --color=always {} | head -200' "$@" ;;
    export|unset) fzf --preview "eval 'echo $'{}"         "$@" ;;
    ssh)          fzf --preview 'dig {}'                   "$@" ;;
    *)            fzf --preview "$show_file_or_dir_preview" "$@" ;;
  esac
}

# fzf git
source ~/.zsh/fzf-git.sh

# Catppucchin fzf styling
export FZF_DEFAULT_OPTS=" \
--color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#f5e0dc,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8"
# Catppucchin mocha bat highlighting
export BAT_THEME=catppuccin_mocha

# Aliases
alias rl="source ~/.zshrc; kill -SIGUSR1 $(pgrep kitty)"
alias cat="bat"
alias ls="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions"
alias l="ls"
alias z="zoxide"
alias cd="z"
